{
    "compilerOptions": {
        "module": "ESNext",
        "lib": ["ES2022", "ESNext"],
        "moduleResolution": "node",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts, **/*.test.ts, dist/**/*"]
}