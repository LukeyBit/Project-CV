{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "es2020",
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts, **/*.test.ts, dist/**/*"]
}