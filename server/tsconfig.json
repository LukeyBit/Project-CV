{
  
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  },
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "exclude": ["./coverage", "./dist", "__tests__", "jest.config.js", "node_modules"],
  "include": ["./src", "**/*.ts", "**/*.js"]
}